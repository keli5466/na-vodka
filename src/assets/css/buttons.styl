
button
	border solid rem(4px) white
	box-shadow inset 0 0 0 0 white
	color white
	font-family body-font
	font-size 36px
	height @width
	line-height 1.13
	max-height rem(80px)
	max-width rem(304px)
	transition box-shadow 0.9s cubic-bezier(0.25, 0.1, 0.25, 1), color 0.9s cubic-bezier(0.25, 0.1, 0.25, 1), border-color 0.9s cubic-bezier(0.25, 0.1, 0.25, 1), opacity 1s ease-in-out !important
	width 100%

	&:hover
		box-shadow inset -15em 0 0 0 white
		color cobalt
		cursor pointer

	@media (min-width: S)
		font-family TradeGothicLTStd-BdCn20
		font-size 30px

	&.blue-bg
		background cobalt
		border solid rem(1px) cobalt

	&.default
		border solid rem(1px) #979797
		box-shadow inset 0 0 0 0 cobalt
		color cobalt

		&:hover
			border-color cobalt
			box-shadow inset -15em 0 0 0 cobalt
			color white

		&:active
			box-shadow inset 0 0 0 0 cobalt
			color cobalt

	&.drizly
		background url('/assets/images/icons/red-drizly.png') no-repeat
		background-position 90% 50%
		background-size rem(50px) rem(50px)

	&.sm
		height rem(72px)
		width rem(270px)

.slide
	color green
