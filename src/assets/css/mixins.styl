shadow(mwidth,mheight)
	position relative
	background white
	max-height unit(mheight,'px')
	width 100%
	aspect-ratio(mwidth/mheight)
	max-width unit(mwidth,'px')
	&:after
		position absolute
		left 50%
		z-index -1
		transform translateX(-50%)
		height 100%
		width 90%
		content ''
		box-shadow 0px rem(20px) rem(70px) rem(5px) rgba(0,0,0,0.2)
		transition box-shadow 300ms ease
	&:hover
		&:after
			box-shadow 0px rem(20px) rem(70px) rem(10px) rgba(0,0,0,0.25)

font(style, size = null, color = null)

	// Fonts
	if style == 'KO'
		font-family Knockout-HTF27-JuniorBantamwt
		font-weight normal
		text-transform uppercase
		font-style normal

	if style == 'light'
		font-weight normal
		text-transform uppercase
		font-style normal
		font-family Knockout-HTF29-JuniorLiteweight
	// Icomoon
	else if style == 'icon'
		font-family 'icomoon' !important;
		speak none
		font-style normal
		font-weight normal
		font-variant normal
		text-transform none
		line-height 1

	font-size size if size

	// Add font color
	color color if color
