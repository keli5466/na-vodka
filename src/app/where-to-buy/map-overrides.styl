
modal
	position relative
	display block
	.sidebar_wrap
	.modal-dialog
		position absolute
		overflow hidden
	.modal
		height 560px
		position relative
		margin-left rem(-(gutter))
		margin-right rem(-(gutter))
		@media (min-width S)
			margin-left rem(-(l-gutter))
			margin-right rem(-(l-gutter))
		@media (min-width M)
			margin-left rem(-(left-spacing))
			margin-right rem(-(left-spacing))
	.modal-header
	.modal-footer
		display none

	.gm-style-iw
		width 217px!important
		.agm-info-window-content
			form-label()
			strong
				color cobalt!important
				font-weight normal
				line-height 1.5

	// Mobile tab choice map/listing
	.map_btn_grp
		z-index 11
		height 60px

		button
			background white
			font 'KO', 36px, cobalt!important
			height 60px
			transition all 300ms ease
			&:first-child
				border-width 0px 1px 2px 0px!important
			&:last-child
				border-width 0px 0px 1px 1px!important
			&.active
				box-shadow tile-shadow
				border-color rgba(0,0,0,0.2)!important
				border-style solid!important


// Side Bar
.sidebar_wrap
	height 100%!important
	@media (max-width S)
		height calc(100% - 60px)!important
		&:after
			content ''
			width 50%
			position absolute
			top 0
			right 0
			background rgba(0,0,0,0.2)!important
			height 2px

	.sidebar
		background white
		box-shadow none

	.sidebar-logo
		display none
	.map_menu
		display none
	.list-wrap .listing
		height 100%
		.listing_item
			border-bottom none!important
			.marker
				display none
			.acctInfo
				form-label()
			// active
			&.active .acctInfo
				color cobalt

			&:hover
				background white
