@import '~definitions.styl'

.navagation
	padding 0 rem(gutter)

.top-section
	width 100%
	position relative
	display flex
	align-items center
	height rem(mobile-nav-height)
	@media (min-width S)
		height rem(nav-height)

.nav-toggle
	display flex
	flex-direction column
	height rem(mobile-nav-height)
	justify-content flex-end
	align-items center
	position absolute
	right 0
	top 0
	text-align center
	&:hover
		cursor pointer

	p
		font( 'light', 24px, #000000)
		line-height 1.67
		margin rem(5px) 0 0
		text-align center

	@media (min-width S)
		flex-direction row-reverse
		justify-content end
		height rem(nav-height)
		p
			margin-right 10px
			margin-top 0
			line-height normal
			font-size 16px

.logo
	margin-h auto
	max-width rem(220px)
	display block
	height rem(30px)
	img
		height 100%
		width 100%
	@media (min-width S)
		max-width rem(140px)
		margin-left 0
		height rem(20px)

// SIDE MENU
.mobile-menu
	box-shadow tile-shadow
	width 100%
	position fixed
	z-index 9999
	background white
	top 0
	left 0
	bottom 0
	@media (max-width S)
		overflow-y auto
		height 100%
	transition transform 400ms ease-in-out
	a
		transition opacity 100ms ease
		&:hover
			opacity 0.6

	&-wrapper
		padding 0 rem(gutter) rem(20px)
		display flex
		min-height 100%
		height auto
		flex-direction column

		@media (min-width S)
			padding 0 rem(gutter) rem(40px) rem(102px)
			height 100%

// UL Nav
.main-nav
	list-style-type none
	margin 0
	padding 0
	width 100%
	-webkit-transform-style preserve-3d
	-webkit-backface-visibility hidden
	li
		list-style-type none
		text-align center
		margin-bottom auto
		a
			font 'KO', 100px, black
			letter-spacing normal
			text-align center
			text-decoration none
			line-height 1.29

			&.active
				color cobalt

	@media (min-width S)
		display flex
		max-height 70vh
		flex-direction column
		flex-wrap wrap
		margin-top rem(20px)
		justify-content flex-start
		margin-bottom auto

		li
			width auto
			margin-bottom rem(28px)
			text-align left
			a
				line-height 1

.terms
	margin-top auto
	padding 0
	text-align center
	@media (min-width S)
		text-align left
		margin-bottom auto
	li
		display inline-block
		text-align left
		font 'KO', 24px, cool-grey
		line-height 1.33
		&:first-child:after
			content ''
			margin 0 12px
			border-right 2px solid cool-grey



@import './header-animation.styl'
