@import '~definitions.styl'

.app-loader
	position fixed
	height 100vh
	width 100vw
	top 0
	left 0
	bottom 0
	background white
	z-index 1000

	&:after
		content ''
		display block
		background cobalt
		height 100%
		width 100%
		transform translateX(100%)

	.counter
		position absolute
		left 50%
		font 'KO', 64px, black
		top 45%
		transform translate(-50%,-50%)

	#bar
		background cobalt
		center()
		max-width 50%
		display block
		height 6px
		transition width 200ms cubic-bezier(.6,.08,.3,0.9)

	&.animate
		transform translateX(-100%)
		transition transform 200ms cubic-bezier(0.6, 0.08, .3, .9) 900ms

		&:after
			transform translateX(0)
			transition transform 200ms cubic-bezier(0.6, 0.08, .3, .9) 500ms
