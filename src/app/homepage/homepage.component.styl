//
@import '~definitions.styl'
@import 'header-animation.styl'

.headline-block
	width 100%
// Custom gutter for this page
.gutter
	@media (min-width M)
		padding-left rem(l-gutter)
		padding-right rem(l-gutter)

// drizly
.drizly-cta
	margin-v rem(80px)
	// padding-bottom rem(116px)
	opacity 0
	transition transform 1.1s cubic-bezier(0.24, 0, 0.33, 0.99), opacity 1.2s ease
	&.slide
		opacity 1
		z-index 10

	.cta-title
		font 'light', 64px, slate-grey

	.copy
		margin-top rem(19px)

		// margin rem(62px) auto
	// Wraps Drizly Logo and Link for mobile
	.row-wrapper
		display flex
		flex-direction row-reverse
		align-items center
		justify-content center
		margin-top rem(50px)

	.drizly-logo
		max-width rem(132px)
		margin-left rem(22px)

	a
		font 'KO', 48px, #ed4235

	@media (min-width S)
		position relative
		padding 0
		margin-v 0
		margin-left auto

		.desktop-wrapper
			position absolute
			right 0
			top 12px
			z-index 2
			max-width rem(352px)
			width 100%
			display flex
			background white
			padding rem(15px) rem(32px)
			justify-content space-around
			align-items center
			box-shadow tile-shadow
			transition all 300ms ease
			&:hover
				box-shadow hover-tile-shadow

		.row-wrapper
			margin-top 2px
			justify-content flex-end

		.column-wrapper
			text-align left

		.drizly-logo
			max-width rem(110px)
			margin 0

		.cta-title
			font-size 31.4px

		.copy
			font-size 18px
			margin 0
		a
			font-size 24px
			margin-top 1px
			&:hover
				opacity 0.7
				transition opacity 300ms ease
